<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <!-- Ehcache Headers and Page Filter -->
    <display-name>Imajiematch</display-name>
    <listener>
        <listener-class>org.imajie.server.web.SessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>matchIcon</servlet-name>
        <servlet-class>org.imajie.server.web.imajiematch.IconServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>layar</servlet-name>
        <servlet-class>org.imajie.server.web.imajiematch.matchsServers.layar.LayarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>layar</servlet-name>
        <url-pattern>/layar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>arml</servlet-name>
        <servlet-class>org.imajie.server.web.imajiematch.matchsServers.wikitude.ArmlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>arml</servlet-name>
        <url-pattern>/arml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>kml</servlet-name>
        <servlet-class>org.imajie.server.web.KmlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>kml</servlet-name>
        <url-pattern>/admin/kml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>junaio</servlet-name>
        <servlet-class>org.imajie.server.web.imajiematch.matchsServers.junaio.JunaioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>junaioAuth</servlet-name>
        <servlet-class>org.imajie.server.web.imajiematch.matchsServers.junaio.JunaioAuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateLayarParams</servlet-name>
        <servlet-class>org.imajie.server.web.imajiematch.matchsServers.layar.LayarParamsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateLayarParams</servlet-name>
        <url-pattern>/admin/updateLayarParams</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>mixare</servlet-name>
        <servlet-class>org.imajie.server.web.imajiematch.matchsServers.mixare.MixareServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mixare</servlet-name>
        <url-pattern>/mixare</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>junaio</servlet-name>
        <url-pattern>/junaio/pois/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>junaioAuth</servlet-name>
        <url-pattern>/junaiotest/pois/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>matchIcon</servlet-name>
        <url-pattern>/icon</url-pattern>
    </servlet-mapping>
    <session-config>
        <!--<tracking-mode>COOKIE</tracking-mode>-->
        <session-timeout>180</session-timeout>
        <!--<cookie-config>
            <max-age>
      31536000
    </max-age>
        </cookie-config>-->
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <security-role>
        <role-name>admin</role-name>
        <listener>
            <listener-class>org.imajie.server.web.SessionListener</listener-class>
        </listener>
        <session-config>
            <tracking-mode>COOKIE</tracking-mode>
            <session-timeout>180</session-timeout>
            <cookie-config>
                <max-age>
      31536000
    </max-age>
            </cookie-config>
        </session-config>
    </security-role>
    <security-constraint>
        <display-name>admin</display-name>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
